<% content_for :second_menu do %>
  <%= render partial: 'category_listing_item', collection: @categories, as: 'category', layout: 'category_listing', locals: { current: @category } unless @categories.blank? %>
<% end %>


<%= no_cms_admin_form_for @category do |f| %>
  <%= render partial: 'no_cms/admin/shared/toolbar', locals: { f: f } %>
  <div class="content">
    <%= render 'no_cms/admin/shared/log_messages' %>
    <%= render 'content_fields', f: f %>
  </div>
<% end %>
